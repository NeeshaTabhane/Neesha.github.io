  </footer>  <script>
    let threshold = 300;
    function updateSim(val){
      document.getElementById('meter').textContent = val;
      const pump = document.getElementById('pump');
      if(Number(val) < threshold){ pump.textContent = 'चालू'; pump.style.color = 'green'; }
      else { pump.textContent = 'बंद'; pump.style.color = 'red'; }
    }
    updateSim(document.getElementById('moist').value);
  </script></body>
